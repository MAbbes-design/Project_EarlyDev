<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Early_Dev_vs.src.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Image
                Source="dotnet_bot.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="dot net bot in a race car number eight" /> <!-- leaving the car picture in for now, will replace it with something nicer later-->

            <Label
                Text="Dashboard"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <!-- Student Profiles Tile -->
            <Frame
                    CornerRadius="10"
                    Padding="10"
                    BackgroundColor="LightGray">
                <Label 
                    Text="Student Profiles"
                    FontSize="20"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                <Frame.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnStudentProfilesTapped"/>
                    </Frame.GestureRecognizers>
            </Frame>

            <!-- Lesson Start Tile -->
            <Frame
                    CornerRadius="10"
                    Padding="10"
                    BackgroundColor="LightGray">
                <Label 
                    Text="Let’s Learn"
                    FontSize="20"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnLessonStartTapped"/>
                </Frame.GestureRecognizers>
            </Frame>

            <!-- Reports Tile -->
            <Frame
                    CornerRadius="10"
                    Padding="10"
                    BackgroundColor="LightGray">
                <Label 
                    Text="Reports"
                    FontSize="20"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnReportsTapped"/>
                </Frame.GestureRecognizers>
            </Frame>

            <!-- Test Management Tile -->
            <Frame
                    CornerRadius="10"
                    Padding="10"
                    BackgroundColor="LightGray">
                <Label 
                    Text="Test Management"
                    FontSize="20"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnTestManagementTapped"/>
                </Frame.GestureRecognizers>
            </Frame>

            <!-- Settings Tile -->
            <Frame
                    CornerRadius="10"
                    Padding="10"
                    BackgroundColor="LightGray">
                <Label 
                    Text="Settings"
                    FontSize="20"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"/>
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnSettingsTapped"/>
                </Frame.GestureRecognizers>
            </Frame>
            
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
